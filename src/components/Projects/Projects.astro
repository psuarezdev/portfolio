---
import Link from "../icons/Link.astro";
import GitHub from "../icons/GitHub.astro";
import LinkButton from "../LinkButton.astro";
import { TAGS } from "../Projects/tags";

const PROJECTS = [
  {
    title: "PSuarezDev Academy",
    description:
      "Plataforma de E-Learning que facilita el acceso a cursos y la gestión de contenidos con un sistema de roles. Con su interfaz moderna y funciones avanzadas, ofrece una solución práctica y escalable para la educación digital.",
    link: "",
    github: "https://github.com/psuarezdev/psuarezdev-academy",
    image: "psuarezdev-academy.webp",
    tags: [
      TAGS.NEXT,
      TAGS.TYPESCRIPT,
      TAGS.TAILWIND,
      TAGS.PRISMA,
      TAGS.POSTGRESQL,
      TAGS.STRIPE,
      TAGS.PYTHON,
    ],
  },
  {
    title: "LoMobility",
    description:
      "Innovadora iniciativa que busca empoderar a los ciudadanos para mejorar la accesibilidad en entornos urbanos",
    link: "http://herraduramasproquo.com",
    image: "lomobility.webp",
    tags: [
      TAGS.NEXT,
      TAGS.TYPESCRIPT,
      TAGS.TAILWIND,
      TAGS.PRISMA,
      TAGS.POSTGRESQL,
    ],
  },
  {
    title: "Clon de Discord",
    description: 
      "Clon Fullstack que replica las funcionalidades esenciales de Discord, incluyendo chats en tiempo real, servidores personalizados, canales de voz, canales de video y mensajería instantánea.",
    link: "",
    github: "https://github.com/psuarezdev/discord-clone",
    image: "discord-clone.webp",
    tags: [
      TAGS.NEXT,
      TAGS.TYPESCRIPT,
      TAGS.TAILWIND,
      TAGS.PRISMA,
      TAGS.POSTGRESQL,
    ],
  },
  {
    title: "Clon de Airbnb",
    description: 
      "Clon Fullstack de Airbnb que permite la publicación, búsqueda y reserva de alojamientos. Incluye autenticación segura, gestión de propiedades y sistema de pagos, proporcionando una experiencia inmersiva y funcional.",         
    link: "",
    github: "https://github.com/psuarezdev/airbnb-clone",
    image: "airbnb-clone.webp",
    tags: [
      TAGS.REACT,
      TAGS.NEST,
      TAGS.TYPESCRIPT,
      TAGS.TAILWIND,
      TAGS.PRISMA,
      TAGS.MONGODB,
      TAGS.REDIS,
    ],
  },
  {
    title: "Clon de Reddit",
    description: 
      "Clon de Reddit con soporte para la creación y moderación de comunidades, votaciones en publicaciones, comentarios anidados y un diseño moderno.",
    link: "",
    github: "https://github.com/psuarezdev/reddit-clone",
    image: "reddit-clone.webp",
    tags: [
      TAGS.NEXT,
      TAGS.TYPESCRIPT,
      TAGS.TAILWIND,
      TAGS.PRISMA,
      TAGS.POSTGRESQL,
    ],
  },
  /*{
    title: "Angular E-Commerce",
    description: "Fullstack E-Commerce",
    link: "",
    github: "https://github.com/psuarezdev/angular-ecommerce",
    image: "angular-ecommerce.webp",
    tags: [
      TAGS.ANGULAR,
      TAGS.EXPRESS,
      TAGS.STRIPE,
      TAGS.TYPESCRIPT,
      TAGS.TAILWIND,
      TAGS.MONGODB,
    ],
  },*/
];
---

<div class="flex flex-col gap-y-16 mt-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative max-h-[235px] flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-[235px] md:scale-105 md:group-hover:scale-105"
              loading="lazy"
              src={`/projects/${image}`}
              alt={title}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row flex-wrap mb-2 gap-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>
            <div class="w-full mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Código
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Visitar
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
