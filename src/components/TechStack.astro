<script>
  const gradientArticles = document.querySelectorAll(".gradient-article");

  gradientArticles.forEach((gradientArticle) => {
    const gradientDiv = gradientArticle.querySelector("div");

    if (!gradientDiv) return;

    gradientArticle.addEventListener("mousemove", (event) => {
      const rect = gradientArticle.getBoundingClientRect();

      const e = event as MouseEvent;

      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;

      gradientDiv.style.opacity = "1";
      gradientDiv.style.background = `radial-gradient(600px at ${x}px ${y}px, var(--gradient-article--bg--color), transparent 40%)`;
    });

    gradientArticle.addEventListener("mouseleave", () => {
      gradientDiv.style.opacity = "0";
    });
  });
</script>
